@model IEnumerable<HospitalSystem.Models.Appointment>

@{
    ViewBag.Title = "Doktor Paneli";
}

<div class="row" style="margin-top:20px;">
    <div class="col-md-12">
        <div class="alert alert-info text-center" style="padding: 20px;">
            <h3>Hoşgeldiniz, Sayın Doktor</h3>
            <p>Bugün toplam <strong>@ViewBag.TodayCount</strong> adet aktif randevunuz bulunmaktadır.</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="glyphicon glyphicon-calendar"></i> Randevu Listesi</h3>
            </div>
            <div class="panel-body">
                @if (!Model.Any())
                {
                    <p class="text-center text-muted">Henüz atanmış bir randevunuz bulunmamaktadır.</p>
                }
                else
                {
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Tarih & Saat</th>
                                <th>Hasta Adı Soyadı</th>
                                <th>Cinsiyet</th>
                                <th>Şikayet (Sebep)</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                string rowClass = "";
                                if (item.AppointmentDateTime.Date == DateTime.Today) { rowClass = "info"; }

                                <tr class="@rowClass">
                                    <td>
                                        <strong>@item.AppointmentDateTime.ToString("dd.MM.yyyy")</strong>
                                        <br />
                                        @item.AppointmentDateTime.ToString("HH:mm")
                                    </td>
                                    <td>
                                        @if (item.Patient != null && item.Patient.User != null)
                                        {
                                            @item.Patient.User.FirstName @item.Patient.User.LastName
                                        }
                                        else
                                        {
                                            <span class="text-danger">Hasta Bilgisi Yok</span>
                                        }
                                    </td>
                                    <td>@(item.Patient != null ? item.Patient.User.Gender : "-")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Reason) && item.Reason.Length > 50)
                                        {
                                            @item.Reason.Substring(0, 50) <text>...</text>
                                        }
                                        else
                                        {
                                            @item.Reason
                                        }
                                    </td>
                                    <td>
                                        @if (item.Status == "Aktif")
                                        {
                                            <span class="label label-success">Aktif</span>
                                        }
                                        else if (item.Status == "İptal")
                                        {
                                            <span class="label label-danger">İptal</span>
                                        }
                                        else
                                        {
                                            <span class="label label-default">@item.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-primary btn-xs">
                                            <i class="glyphicon glyphicon-folder-open"></i> Dosyayı Aç
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>