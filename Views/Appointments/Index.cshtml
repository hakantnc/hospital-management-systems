@model IEnumerable<HospitalSystem.Models.Appointment>

@{
    ViewBag.Title = "Randevularım";
}

<h2>Randevularım</h2>
<hr />

<p>
    @Html.ActionLink("Yeni Randevu Al", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Tarih & Saat</th>
            <th>Departman</th>
            <th>Doktor</th>
            <th>Durum</th>
            <th>Şikayetiniz</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center">Henüz bir randevunuz bulunmamaktadır.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.AppointmentDateTime.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@item.Doctor.Department.DepartmentName</td>
                    <td>
                        Dr. @item.Doctor.User.FirstName @item.Doctor.User.LastName
                    </td>
                    <td>
                        @if (item.Status == "Aktif")
                        {<span class="label label-success">Aktif</span> }
                        else if (item.Status == "İptal")
                        { <span class="label label-danger">İptal</span> }
                        else
                        { <span class="label label-default">@item.Status</span>}
                    </td>
                    <td>@item.Reason</td>
                    <td>
                        @if (item.AppointmentDateTime > DateTime.Now && item.Status != "İptal")
                        {
                            <button class="btn btn-danger btn-xs">İptal Et</button>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>