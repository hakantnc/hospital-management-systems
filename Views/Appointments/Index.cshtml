@model IEnumerable<HospitalSystem.Models.Appointment>

@{
    ViewBag.Title = "Randevularım";
}

<div class="container" style="padding-top: 30px;">
    <h2>Randevularım</h2>
    <hr />

<p>
    @Html.ActionLink("Yeni Randevu Al", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Tarih & Saat</th>
            <th>Departman</th>
            <th>Doktor</th>
            <th>Durum</th>
            <th>Şikayetiniz</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center">Henüz bir randevunuz bulunmamaktadır.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.AppointmentDateTime.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@item.Doctor.Department.DepartmentName</td>
                    <td>
                        Dr. @item.Doctor.User.FirstName @item.Doctor.User.LastName
                    </td>
                    <td>
                        @if (item.Status == "Aktif")
                        {<span class="label label-success">Aktif</span> }
                        else if (item.Status == "İptal")
                        { <span class="label label-danger">İptal</span> }
                        else
                        { <span class="label label-default">@item.Status</span>}
                    </td>
                    <td>@item.Reason</td>
                    <td>
                        @if (item.AppointmentDateTime > DateTime.Now && item.Status != "İptal" && item.Status != "Tamamlandı")
                        {
                            using (Html.BeginForm("Cancel", "Appointments", new { id = item.AppointmentID }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-xs" onclick="return confirm('Bu randevuyu iptal etmek istediğinize emin misiniz?');">
                                    <i class="glyphicon glyphicon-remove"></i> İptal Et
                                </button>
                            }
                        }
                        else
                        {
                            if (item.Status == "İptal")
                            {
                                <span class="text-muted"><i class="glyphicon glyphicon-ban-circle"></i> İptal Edildi</span>
                            }
                            else if (item.Status == "Tamamlandı")
                            {
                                <span class="text-success"><i class="glyphicon glyphicon-check"></i> Tamamlandı</span>
                            }
                            else
                            {
                                <span class="text-muted">Süresi Geçti</span>
                            }
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
</div>