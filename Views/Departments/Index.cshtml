@model IEnumerable<HospitalSystem.Models.Department>

@{
    ViewBag.Title = "Bölüm Yönetimi";
}

<div class="row">
    <div class="col-md-12">
        <h2 class="page-header">
            Poliklinik / Bölüm Yönetimi
            <a href="@Url.Action("Create", "Departments")" class="btn btn-success pull-right">
                <i class="glyphicon glyphicon-plus"></i> Yeni Bölüm Ekle
            </a>
            <a href="@Url.Action("Index", "Admin")" class="btn btn-default pull-right" style="margin-right:10px;">
                <i class="glyphicon glyphicon-arrow-left"></i> Panele Dön
            </a>
        </h2>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>#ID</th>
            <th>Bölüm Adı</th>
            <th>Açıklama</th>
            <th>Doktor Sayısı</th>
            <th style="width: 100px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DepartmentID</td>
                <td><strong>@item.DepartmentName</strong></td>
                <td>@item.Description</td>
                <td>
                    <span class="badge" style="color: black">@item.Doctors.Count()</span>
                </td>
                <td>
                    @using (Html.BeginForm("Delete", "Departments", new { id = item.DepartmentID }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-xs btn-block" onclick="return confirm('@item.DepartmentName bölümünü silmek istediğinize emin misiniz?');">
                            <i class="glyphicon glyphicon-trash"></i> Sil
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>