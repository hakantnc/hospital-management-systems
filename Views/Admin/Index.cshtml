@model IEnumerable<HospitalSystem.Models.Doctor>

@{
    ViewBag.Title = "Admin Paneli";
}

<div class="container" style="padding-top: 30px;">

    <div class="row">
        <div class="col-md-12">
            <h2 class="page-header">Yönetim Paneli (Dashboard)</h2>
        </div>
    </div>

    <div class="row text-center">
        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">Top. Doktor</div>
                <div class="panel-body">
                    <h3>@ViewBag.TotalDoctors</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="panel panel-success">
                <div class="panel-heading">Top. Hasta</div>
                <div class="panel-body">
                    <h3>@ViewBag.TotalPatients</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="panel panel-info">
                <div class="panel-heading">Top. Randevu</div>
                <div class="panel-body">
                    <h3>@ViewBag.TotalAppointments</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="panel panel-warning">
                <div class="panel-heading">Aktif Randevular</div>
                <div class="panel-body">
                    <h3>@ViewBag.ActiveAppointments</h3>
                </div>
            </div>
        </div>
    </div>

    <hr />

    <div class="row" style="margin-bottom: 20px;">
        <div class="col-md-6">
            <a href="@Url.Action("Index", "Departments")" class="btn btn-info">
                <i class="glyphicon glyphicon-th-list"></i> Bölümleri Yönet
            </a>
            <a href="@Url.Action("AddDoctor", "Admin")" class="btn btn-success">
                <i class="glyphicon glyphicon-plus"></i> Yeni Doktor Ekle
            </a>
        </div>

        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                <input type="text" id="txtSearch" class="form-control" placeholder="Doktor Ara (İsim veya Soyisim)..." />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h3>Sisteme Son Eklenen Doktorlar</h3>

            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Bölüm</th>
                        <th>Telefon</th>
                        <th style="width: 100px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody id="tblDoctors">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.User.FirstName @item.User.LastName</td>
                            <td>@item.User.Email</td>
                            <td>@(item.Department != null ? item.Department.DepartmentName : "-")</td>
                            <td>@(item.User.Phone ?? "-")</td>
                            <td>
                                <a href="@Url.Action("DeleteDoctor", "Admin", new { id = item.UserID })"
                                   class="btn btn-danger btn-xs"
                                   onclick="return confirm('@item.User.FirstName @item.User.LastName isimli doktoru silmek istediğinize emin misiniz?');">
                                    <i class="glyphicon glyphicon-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div id="noDataAlert" class="alert alert-warning" style="display:none;">
                Aradığınız kriterlere uygun doktor bulunamadı.
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {

            $("#txtSearch").on("keyup", function () {
                var searchText = $(this).val();

                if (searchText.length === 0) {
                    location.reload();
                    return;
                }

                $.ajax({
                    url: '/Admin/SearchDoctor',
                    type: 'GET',
                    data: { searchTerm: searchText },
                    dataType: 'json',
                    success: function (data) {
                        $("#tblDoctors").empty();
                        $("#noDataAlert").hide();

                        if (data && data.length > 0) {
                            $.each(data, function (index, item) {
                                var row = '<tr>' +
                                    '<td>' + item.FullName + '</td>' +
                                    '<td> - </td>' +
                                    '<td><span class="label label-info">' + item.Branch + '</span></td>' +
                                    '<td>' + item.Phone + '</td>' +
                                    '<td>' +
                                    '<a href="/Admin/DeleteDoctor/' + item.UserID + '" class="btn btn-danger btn-xs" onclick="return confirm(\'Silmek istediğinize emin misiniz?\');">' +
                                    '<i class="glyphicon glyphicon-trash"></i> Sil' +
                                    '</a>' +
                                    '</td>' +
                                    '</tr>';
                                $("#tblDoctors").append(row);
                            });
                        } else {
                            $("#noDataAlert").show();
                        }
                    },
                    error: function (err) {
                        console.log(err);
                    }
                });
            });
        });
    </script>
}